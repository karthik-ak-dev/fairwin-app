# ===========================================
# FairWin Environment Variables
# Copy this file to .env.local and fill in your values
# ===========================================

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# ===========================================
# DynamoDB Tables
# Shared tables (cross-game): Users
# Raffle game tables: Raffle-* prefix
# Stage: Use FairWin-Stage-* prefix
# Prod: Use FairWin-Prod-* prefix
# ===========================================
# Shared Tables
DYNAMODB_TABLE_USERS=FairWin-Stage-Users

# Raffle Game Tables
DYNAMODB_TABLE_RAFFLES=FairWin-Stage-Raffle-Raffles
DYNAMODB_TABLE_ENTRIES=FairWin-Stage-Raffle-Entries
DYNAMODB_TABLE_WINNERS=FairWin-Stage-Raffle-Winners

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000

# ===========================================
# Authentication & Security
# ===========================================
# JWT Secret for signing authentication tokens
# Generate a strong random secret: openssl rand -hex 64
JWT_SECRET=your-jwt-secret-change-in-production-use-openssl-rand-hex-64

# EventBridge API Key (for automated event sync)
# Generate with: openssl rand -hex 32
# Store in AWS Secrets Manager for EventBridge to use
EVENTBRIDGE_API_KEY=your-eventbridge-api-key-change-in-production

# ===========================================
# Chainlink VRF Configuration
# ===========================================
VRF_SUBSCRIPTION_ID=your-subscription-id
VRF_COORDINATOR=0xAE975071Be8F8eE67addBC1A82488F1C24858067
VRF_KEY_HASH=0xcc294a196eeeb44da2888d17c0625cc88d70d9760a69d58d853ba6581a9ab0cd

# ===========================================
# AWS Secrets Manager (Optional)
# ===========================================
SECRETS_OPERATOR_KEY_NAME=fairwin/operator-private-key

# ===========================================
# Socket/WebSocket (Optional)
# ===========================================
SOCKET_API_KEY=

# ===========================================
# Client-side (NEXT_PUBLIC_) Variables
# These are exposed to the browser
# ===========================================

# Contract Addresses
NEXT_PUBLIC_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000
NEXT_PUBLIC_USDC_CONTRACT=0x3c499c542cEF5E3811e1192ce70d8cC03d5c3359

# Network Configuration
# 137 = Polygon Mainnet
# 80002 = Polygon Amoy Testnet
NEXT_PUBLIC_CHAIN_ID=137
NEXT_PUBLIC_RPC_URL=https://polygon-rpc.com

# WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_POLYGONSCAN_URL=https://polygonscan.com

# Admin Wallet (Optional, can be same as server-side)
NEXT_PUBLIC_ADMIN_WALLET_ADDRESS=0x0000000000000000000000000000000000000000
